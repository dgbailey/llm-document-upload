# Database
DATABASE_URL=postgresql://user:password@localhost/ai_doc_summary

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Providers (Add your API keys)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_API_KEY=your_google_ai_key_here

# Storage
STORAGE_TYPE=local  # or 's3' or 'minio'
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cost Estimation (per 1000 tokens)
OPENAI_GPT4_INPUT_COST=0.03
OPENAI_GPT4_OUTPUT_COST=0.06
OPENAI_GPT35_INPUT_COST=0.001
OPENAI_GPT35_OUTPUT_COST=0.002
ANTHROPIC_CLAUDE_INPUT_COST=0.008
ANTHROPIC_CLAUDE_OUTPUT_COST=0.024
GOOGLE_GEMINI_INPUT_COST=0.00025
GOOGLE_GEMINI_OUTPUT_COST=0.0005

# Demo Mode
DEMO_MODE=true
DEMO_FAILURE_RATE=0.1  # 10% failure rate for demo
DEMO_SLOW_TASK_RATE=0.2  # 20% slow tasks for demo

# Sentry Configuration (optional)
SENTRY_DSN=
ENVIRONMENT=development
APP_VERSION=1.0.0